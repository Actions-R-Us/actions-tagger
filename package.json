{
    "name": "actions-tagger",
    "version": "2.0.0-alpha",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Actions-R-Us/actions-tagger.git"
    },
    "main": "lib/index.js",
    "scripts": {
        "watch": "ncc build src/action.ts --watch --minify --out lib",
        "test": "jest"
    },
    "jest": {
        "bail": true,
        "verbose": true,
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/*.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            ".ts$": "ts-jest"
        }
    },
    "author": {
        "name": "Actions-R-Us",
        "url": "https://github.com/Actions-R-Us"
    },
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.2.3",
        "@actions/github": "^2.1.1",
        "semver": "^7.1.2"
    },
    "devDependencies": {
        "@types/semver": "^7.1.0",
        "@types/node": "^12.12.18",
        "@types/jest": "22.2.3",
        "@zeit/ncc": "^0.22.0",
        "jest": "25.2.4",
        "prettier": "2.0.2",
        "ts-jest": "25.3.0",
        "typescript": "3.8.3"
    }
}
